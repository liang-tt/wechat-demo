swiper {
  width: 100%;
  height: 380rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.content {
  margin: 20rpx 10rpx;
}
.currentPosition {
  display: inline-block;
  border: 1rpx solid #2a579a;
  border-radius: 8rpx;
  color: #2a579a;
  font-size: 30rpx;
  line-height: 30rpx;
  padding: 10rpx;
}
.changePotion {
  margin-left: 30rpx;
}
.weatherContainer {
  margin: 15rpx 10rpx;
  background: #f5f5f5;
  padding: 15rpx;
  color: #666;
  font-size: 30rpx;
  height: 550rpx;
}
.district-date {
  border-bottom: 1px solid #2a579a;
  margin-top: 30rpx;
}
.temp {
  text-align: center;
  font-size: 100rpx;
  color: #2a579a;
  height: 180rpx;
  line-height: 180rpx;
}
.weather-detail {
  text-align: center;
}